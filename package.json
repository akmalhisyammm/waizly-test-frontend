{
  "name": "rikutodo",
  "version": "0.1.0",
  "private": true,
  "description": "A simple todo app to keep track of your tasks",
  "author": "Muhammad Akmal Hisyam",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "type:check": "tsc --noEmit",
    "release": "cross-env HUSKY=0 standard-version",
    "release:push": "git push --follow-tags origin main",
    "prepare": "husky install"
  },
  "dependencies": {
    "@chakra-ui/next-js": "^2.2.0",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "axios": "^1.6.2",
    "framer-motion": "^10.16.5",
    "next": "13.5.6",
    "next-pwa": "^5.6.0",
    "next-sitemap": "^4.2.3",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^4.12.0",
    "swr": "^2.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "eslint": "^8.53.0",
    "eslint-config-next": "13.5.6",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0",
    "typescript": "^5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akmalhisyammm/waizly-test-frontend"
  },
  "bugs": {
    "url": "https://github.com/akmalhisyammm/waizly-test-frontend/issues"
  }
}
